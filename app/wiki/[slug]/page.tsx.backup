import React from 'react';
import { notFound } from 'next/navigation';
import Link from 'next/link';
import { BookOpen, ArrowLeft, BrainCircuit } from 'lucide-react';
import Script from 'next/script';
import { Metadata } from 'next';
import fs from 'fs';
import path from 'path';
import matter from 'gray-matter';
import { MDXRemote } from 'next-mdx-remote/rsc';

const WIKI_DIR = path.join(process.cwd(), 'content/wiki');

// Get all MDX files
function getAllWikiSlugs() {
  const files = fs.readdirSync(WIKI_DIR);
  return files
    .filter(file => file.endsWith('.mdx'))
    .map(file => file.replace('.mdx', ''));
}

// Get MDX content by slug
function getWikiBySlug(slug: string) {
  try {
    const filePath = path.join(WIKI_DIR, `${slug}.mdx`);
    const fileContent = fs.readFileSync(filePath, 'utf-8');
    const { data, content } = matter(fileContent);
    
    return {
      slug,
      frontmatter: data,
      content
    };
  } catch (error) {
    return null;
  }
}

// 1. PRE-RENDER ALL PAGES
export async function generateStaticParams() {
  const slugs = getAllWikiSlugs();
  return slugs.map((slug) => ({ slug }));
}

// 2. DYNAMIC SEO
export async function generateMetadata({ params }: { params: { slug: string } }): Promise<Metadata> {
  const wiki = getWikiBySlug(params.slug);
  if (!wiki) return {};

  const { frontmatter } = wiki;
  
  return {
    title: `What is ${frontmatter.title}? | TEAS 7 ${frontmatter.category} Definition`,
    description: frontmatter.definition || `Learn about ${frontmatter.title} for the ATI TEAS 7 exam.`,
  };
}

export default function WikiPage({ params }: { params: { slug: string } }) {
  const wiki = getWikiBySlug(params.slug);

  if (!wiki) {
    notFound();
  }

  const { frontmatter, content } = wiki;

  // SCHEMA: DEFINED TERM
  const wikiSchema = {
    '@context': 'https://schema.org',
    '@type': 'DefinedTerm',
    name: frontmatter.title,
    description: frontmatter.definition,
    inDefinedTermSet: {
      '@type': 'DefinedTermSet',
      name: 'TEAS 7 Exam Vocabulary',
    }
  };

  return (
    <main className="min-h-screen bg-slate-50 font-sans text-slate-900 selection:bg-indigo-50 selection:text-indigo-900">
      <Script
        id={`wiki-schema-${params.slug}`}
        type="application/ld+json"
        dangerouslySetInnerHTML={{ __html: JSON.stringify(wikiSchema) }}
      />

      <div className="max-w-4xl mx-auto px-6 pt-32 pb-20">
        
        {/* BREADCRUMB */}
        <Link href="/wiki" className="inline-flex items-center gap-2 text-slate-500 hover:text-[#20B2AA] mb-8 font-medium transition-colors">
          <ArrowLeft className="w-4 h-4" /> Back to Encyclopedia
        </Link>

        {/* HEADER */}
        <div className="bg-white p-8 rounded-3xl border border-slate-200 shadow-sm">
          <div className="flex items-center gap-3 mb-4">
             <span className={`px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider 
                ${frontmatter.category === 'Science' ? 'bg-blue-100 text-blue-700' : 
                  frontmatter.category === 'Math' ? 'bg-amber-100 text-amber-700' : 
                  'bg-purple-100 text-purple-700'}`}>
                {frontmatter.category}
             </span>
             <span className="text-slate-400 text-sm font-bold">TEAS 7 Concept</span>
          </div>
          
          <h1 className="text-4xl md:text-5xl font-extrabold text-slate-900 mb-6">
            {frontmatter.title}
          </h1>

          <p className="text-xl text-slate-600 leading-relaxed border-l-4 border-[#20B2AA] pl-6 py-1">
            {frontmatter.definition}
          </p>
        </div>

        {/* MDX CONTENT */}
        <div className="bg-white p-8 rounded-3xl border border-slate-200 shadow-sm mt-6 prose prose-slate max-w-none">
          <MDXRemote source={content} />
        </div>

        {/* CONTEXT CARD */}
        <div className="grid md:grid-cols-3 gap-6 mt-6">
          <div className="md:col-span-2 bg-slate-900 text-white p-8 rounded-3xl relative overflow-hidden">
            <div className="absolute top-0 right-0 p-8 opacity-10">
              <BrainCircuit className="w-32 h-32" />
            </div>
            <h2 className="text-xl font-bold mb-4 flex items-center gap-2">
              <BookOpen className="w-5 h-5 text-[#20B2AA]" />
              On the TEAS Exam:
            </h2>
            <p className="text-slate-300 leading-relaxed text-lg">
              {frontmatter.teas_context}
            </p>
          </div>

          {frontmatter.related_terms && frontmatter.related_terms.length > 0 && (
            <div className="bg-white p-6 rounded-3xl border border-slate-200 shadow-sm">
              <h3 className="font-bold text-slate-900 mb-4 text-sm uppercase tracking-wide">Related Topics</h3>
              <ul className="space-y-3">
                {frontmatter.related_terms.map((term: string, i: number) => (
                  <li key={i} className="flex items-center gap-2 text-slate-600 text-sm">
                    <div className="w-1.5 h-1.5 rounded-full bg-[#20B2AA]"></div>
                    {term}
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>

        {/* CTA */}
        <div className="mt-12 text-center">
            <p className="text-slate-500 mb-4">Master {frontmatter.title} and {frontmatter.category} with our AI Tutor</p>
             <Link 
              href="/diagnostic"
              className="inline-flex items-center justify-center px-8 py-3 rounded-xl bg-[#20B2AA] text-white font-bold hover:bg-[#18968F] transition-all"
            >
              Start Free Practice Quiz
            </Link>
        </div>

      </div>
    </main>
  );
}